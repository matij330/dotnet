@model dotnet.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
    </dl>
    <h4>Oceny studenta</h4>
    @if (Model.Grades != null && Model.Grades.Any())
    {
        <dl class="row">
            @foreach (var ocena in Model.Grades)
            {
                <dt class="col-sm-2">Ocena</dt>
                <dd class="col-sm-10">@ocena.Grade</dd>
            }
        </dl>
    }
    else
    {
        <p>Brak ocen</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
